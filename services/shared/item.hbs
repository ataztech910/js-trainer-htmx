<div class="productItemWrapper carousel-component__item">
{{!-- TODO put the url host into env variables --}}
<a class="carousel-component__link" href="https://cyberport.de{{this.url}}">
    <img class="carousel-component__media" alt="" width="200" height="200" src="{{this.img.url}}?$Tile_200$">
        <h3 class="carousel-component__title">{{this.title}}</h3>
        <div class="carousel-component__availability carousel-component__availability--available">Sofort verfügbar</div>
    
    <div class="carousel-component__prices">
        <div class="carousel-component__uvp">
        <span class="carousel-component__uvp-price">€ {{this.retailPriceGross_AT}} UVP</span>
